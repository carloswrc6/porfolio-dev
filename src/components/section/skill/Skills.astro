          <ul class="grid grid-cols-1 sm:grid-cols-3 lg:grid-cols-5 max-[640px]:grid-cols-2 gap-4 mx-6">
            {skills.map((skill) => (
              <li class="col-span-1">
                <span
                  class={`block px-8 py-6 text-center bg-white border border-gray-200 rounded-lg shadow-sm dark:bg-gray-700 dark:border-gray-600 hover:shadow-lg dark:hover:shadow-lg-light ${skill.class} truncate`}
