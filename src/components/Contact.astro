    display: none;
  }
  .fixed {
    position: fixed;
  }
  .inset-0 {
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
  }
  .bg-gray-800 {
    background-color: rgba(31, 41, 55, 0.5);
  }
  .bg-white {
    background-color: white;
  }
  .bg-opacity-50 {
    background-opacity: 0.5;
  }
  .rounded-lg {
    border-radius: 0.5rem;
  }
  .p-4 {
    padding: 1rem;
  }
  .max-w-sm {
    max-width: 24rem;
  }
  .w-full {
    width: 100%;
  }
  .text-center {
    text-align: center;
  }
  .text-gray-900 {
    color: #1f2937;
  }
  .dark\:text-white {
    color: white;
  }
  .dark\:bg-gray-800 {
    background-color: #1f2937;
  }
</style>
